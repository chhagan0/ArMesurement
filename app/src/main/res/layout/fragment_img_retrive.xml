<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Define the ImageView to display the retrieved image -->
    <ImageView
        android:id="@+id/retrievedImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Define TextViews to display the retrieved date and time -->
    <TextView
        android:id="@+id/retrievedDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/retrievedTimeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
